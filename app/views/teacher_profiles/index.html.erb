<h1>Listing Teacher Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Age</th>
      <th>From</th>
      <th>Sex</th>
      <th>Area</th>
      <th>Skill</th>
      <th>Salary</th>
      <th>Jisseki</th>
      <th>Keireki</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teacher_profiles.each do |teacher_profile| %>
      <tr>
        <td><%= teacher_profile.image %></td>
        <td><%= teacher_profile.age %></td>
        <td><%= teacher_profile.from %></td>
        <td><%= teacher_profile.sex %></td>
        <td><%= teacher_profile.area %></td>
        <td><%= teacher_profile.skill %></td>
        <td><%= teacher_profile.salary %></td>
        <td><%= teacher_profile.jisseki %></td>
        <td><%= teacher_profile.keireki %></td>
        <td><%= teacher_profile.comment %></td>
        <td><%= link_to 'Show', teacher_profile %></td>
        <td><%= link_to 'Edit', edit_teacher_profile_path(teacher_profile) %></td>
        <td><%= link_to 'Destroy', teacher_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

