<p id="notice"><%= notice %></p>

<div class="background">
  <h1 class="users_h1">登録されている教師</h1>
  <table class="data_base">
    <thead>
      <tr>
        <th>氏名</th>
        <th>年齢</th>
        <th>出身</th>
        <th>性別</th>
        <th>スキル</th>
        <th>給料</th>
        <th>経歴</th>
        <th>ひとこと</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.age %></td>
          <td><%= user.area %></td>
          <td><%= user.sex %></td>
          <td><%= user.skill %></td>
          <td><%= user.salary %></td>
          <td><%= user.career %></td>
          <td><%= user.comment %></td>
          <!-- <td><%= link_to 'Show', user %></td> -->
          <td><%= link_to '編集', edit_user_path(user) %></td>
          <!-- <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <div class="links">
    <%= link_to '新規登録', new_user_path %>
    <%= link_to "TOPへ戻る", root_path %>
  </div>
</div>