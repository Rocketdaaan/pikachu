<p id="notice"><%= notice %></p>

<h1>情報を入力してください</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Age</th>
      <th>From</th>
      <th>Sex</th>
      <th>Area</th>
      <th>Skill</th>
      <th>Salary</th>
      <th>Performance</th>
      <th>Career</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.image %></td>
        <td><%= profile.age %></td>
        <td><%= profile.from %></td>
        <td><%= profile.sex %></td>
        <td><%= profile.area %></td>
        <td><%= profile.skill %></td>
        <td><%= profile.salary %></td>
        <td><%= profile.performance %></td>
        <td><%= profile.career %></td>
        <td><%= profile.comment %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

